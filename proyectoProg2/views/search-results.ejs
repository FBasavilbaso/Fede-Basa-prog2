<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include("./partials/head") %>

<body>
	<!-- Header -->
	<%- include("./partials/header") %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de búsqueda</h2>
			</div>
			<% if (product.length > 0) { %>
				<% for( let i = 0; i < product.length; i++ ) { %>
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/products/detail/<%= product[i].id %>">
								<figure class="product-box_image">
									<img src="/images/products/<%= product[i].imagen %>" alt="cafetera moulinex">
								</figure>
								<article class="product-box_data">
									<h2><%= product[i].producto  %></h2>
									<p><%= product[i].descripcion  %></p>
									<p>Username: <a href="/users/profile/<%= product[i].user.id %>"><%= product[i].user.usuario %></a></p>
									<p>Comentarios: 12</p>
								</article>
							</a>
						</section>
					</div>
			<% } %>
		   <%} else { %>
			<p class="products-title">No hay resultados para su criterio de búsqueda</p>
		   <% } %>
			
		</div>
	</div>

	<!-- footer -->
	<%- include("./partials/footer") %>
	<!-- /footer -->
</body>

</html>
