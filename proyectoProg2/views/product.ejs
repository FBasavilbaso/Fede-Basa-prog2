<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include("./partials/head") %>

	<body>
		<!-- Header -->
		<%- include("./partials/header") %>
			<!-- /Header -->

			<!-- product detail -->
			<div class="container products-wrapper">
				<div class="d-flex align-items-center">
					<h2 class="products-title">
						<%= product.producto %>
					</h2>
					<% if (locals.user) { %>
						<p class="product-detail-description"><a href="/products/detail/<%= product.id %>">Editar</a>
						</p>
						<% }else { %>
							<p class="product-detail-description">Nombre de ususario: <%= product.user.usuario %>
							</p>
						<% } %>
				</div>
				<div class="product-detail">
					<div class="row">
						<article class="col-12 col-lg-8 product-detail-info">
							<img src="/images/dispositivos/<%= product.imagen %>" alt="" class="product-detail-img">
							<p class="product-detail-description">
								<%= product.descripcion %>
							</p>
						</article>
						<div class="col-12 col-lg-4">
							<section class="comments">
								<article>
									<img src="https://via.placeholder.com/35" alt="">
									<div class="data">
										<p class="user">
											<% if (locals.user) { %>
												<strong><a href="/users/profile/<%= product.user.id %>">
														<%= product.user.id %>
													</a> </strong>
												Creacion del producto: <%= product.createdAt %>
													Publicacion del producto: <%= product.updatedAt %>
										</p>
										<% }else { %>
											<strong>
												<%= product.user.usuario %>
											</strong>
											Creacion del producto: <%= product.createdAt %>
												Publicacion del producto: <%= product.updatedAt %>
													</p>
													<% } %>
									</div>
								</article>
							</section>
							<% if (locals.user) { %>
								<form class="form" action="/products/detail/<%= product.id %>" method="GET">
									<input class="form-input" type="text" value="" placeholder="Agregar comentario">
									<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
								</form>
								<hr>
								<% } %>
						</div>
					</div>
				</div>
			</div>
			<!-- /product detail -->

			<!-- footer -->
			<%- include("./partials/footer") %>
				<!-- /footer -->

	</body>

</html>